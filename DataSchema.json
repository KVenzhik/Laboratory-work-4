{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": [
    "id",
    "code",
    "title"
  ],
  "properties": {
    "id": {
      "type": "integer",
      "minimum": 1
    },
    "code": {
      "type": "string",
      "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$"
    },
    "title": {
      "type": "string",
      "minLength": 1,
      "maxLength": 160
    },
    "created_at": {
      "type": "string",
      "format": "date"
    }
  },
  "additionalProperties": false
}